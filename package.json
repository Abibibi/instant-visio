{
    "name": "instant-visio",
    "version": "2.0.1",
    "private": true,
    "scripts": {
        "start": "react-scripts start",
        "start-chrome": "BROWSER=\"google chrome\" react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "release:all:prod": "npm run tag:before:prod && npm run build && firebase use instantvisio && firebase deploy && npm run tag:after",
        "release:all:dev": "npm run tag:before:dev && firebase use instantvisio-dev &&  env-cmd -f .env.development npm run build && firebase deploy && npm run tag:after",
        "release:hosting:prod": "npm run tag:before:prod && npm run build && firebase use instantvisio && firebase deploy --only hosting && npm run tag:after",
        "release:hosting:dev": "npm run tag:before:dev && firebase use instantvisio-dev && env-cmd -f .env.development npm run build && firebase deploy --only hosting",
        "tag:before:prod": "npm version minor",
        "tag:before:dev": "npm version prerelease",
        "tag:after": "git push && git push --tags"
    },
    "dependencies": {
        "@capacitor/android": "^2.1.0",
        "@capacitor/core": "2.1.0",
        "@daily-co/daily-js": "^0.9.984",
        "@ionic/pwa-elements": "^1.5.2",
        "@ionic/react": "^5.1.1",
        "@ionic/react-hooks": "0.0.8",
        "@ionic/react-router": "^5.1.1",
        "@material-ui/core": "^4.9.14",
        "@material-ui/icons": "^4.9.1",
        "@mdi/js": "^5.1.45",
        "@mdi/react": "^1.4.0",
        "@testing-library/jest-dom": "^4.2.4",
        "@testing-library/react": "^9.5.0",
        "@testing-library/user-event": "^7.2.1",
        "bootstrap": "^4.4.1",
        "classnames": "^2.2.6",
        "color": "^3.1.2",
        "firebase": "^7.12.0",
        "flag-icon-css": "^3.4.6",
        "formik": "^2.1.4",
        "i18n-iso-countries": "^5.1.0",
        "i18next": "^19.3.4",
        "i18next-browser-languagedetector": "^4.0.2",
        "i18next-xhr-backend": "^3.2.2",
        "libphonenumber-js": "^1.7.49",
        "luxon": "^1.22.2",
        "node-sass": "^4.13.1",
        "react": "^16.13.1",
        "react-bootstrap": "^1.0.0-beta.17",
        "react-dom": "^16.13.1",
        "react-helmet": "^6.1.0",
        "react-i18next": "^11.3.4",
        "react-remarkable": "^1.1.3",
        "react-router-dom": "^5.1.2",
        "react-scripts": "3.4.1",
        "styled-components": "^5.0.1",
        "yup": "^0.28.3"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            "since 2010",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "typescript": "3.8.3",
        "@capacitor/cli": "2.1.0",
        "@ionic/cli": "^6.8.0",
        "babel-eslint": "^10.1.0",
        "cordova-res": "^0.14.0",
        "env-cmd": "^10.1.0",
        "eslint": "^6.8.0",
        "eslint-plugin-react": "^7.19.0",
        "firebase-tools": "^8.1.1",
        "husky": "^4.2.5",
        "lint-staged": "^10.1.3",
        "native-run": "^1.0.0",
        "prettier": "^2.0.4"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,js,json,css,md}": [
            "prettier --write"
        ]
    }
}
